<div class="author">
  <h1 class="author__heading">Welcome to AITU Blog.</h1>
  <p class="author__body">Latest news from AITU and more!</p>
</div>
<img src="https://tengrinews.kz/userdata/news/2021/news_441947/resize/photo_366440.jpeg" alt="aitu logo" class="aitu-logo" width="981" height="528">
<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; Show Previous Posts</a>
  <% } %>
</section>